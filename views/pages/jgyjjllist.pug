extends ../layout

block content
	.container-fluid
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 车型
						th 列号
						th 修程
						th 配属局
						//-th 录入时间
						th 上部签字时间
						th 上部监造人员
						th 下部签字时间
						th 下部监造人员
						th 竣工移交记录时间
						th 编号
						th 监造人员
						th 备注
						th 编组情况
						th 修改
						th 删除
					tbody
						each item in jgyjjls
							tr(class="item-id-"+item._id)
								td #{item.chexing}
								td #{item.liehao}
								td #{item.xiucheng}
								td #{item.peishuju}
								td #{item.shangbuDate}
								td #{item.shangbuPerson}
								td #{item.xiabuDate}
								td #{item.xiabuPerson}
								td #{item.jgyjjldate}
								td #{item.jgyjjlSN}
								td #{item.jgyjjlPerson}
								td #{item.beizhu}
								td #{item.bianzu}								
								//-td #{moment(item.meat.createdAt).format('MM/DD/YYYY')}
								td: a(target="_blank", href="../admin/update/"+item._id)  修改
								td
									button.btn.btn-danger.del(type="button", data-id=item._id) 删除
